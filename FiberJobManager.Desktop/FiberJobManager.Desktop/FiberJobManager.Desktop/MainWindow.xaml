<Window x:Class="FiberJobManager.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fiber Job Manager - Login"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="800" Width="1200"
        Background="#E5ECF9">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="193*"/>
            <ColumnDefinition Width="257*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" 
                Width="420"
                Height="560"
                Background="#F4F6FB"
                CornerRadius="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Padding="30"
                Margin="10,50,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#A0B4E5"
                                  BlurRadius="40"
                                  ShadowDepth="10"
                                  Opacity="0.7"/>
            </Border.Effect>

            <StackPanel>

                <!-- Avatar -->
                <Border Width="90" Height="90"
                        CornerRadius="45"
                        Background="#F4F6FB"
                        HorizontalAlignment="Center"
                        Margin="0 0 0 24">
                    <Border.Effect>
                        <DropShadowEffect Color="#FFFFFF"
                                          BlurRadius="25"
                                          ShadowDepth="-6"
                                          Opacity="0.9"/>
                    </Border.Effect>

                    <TextBlock Text="👤"
                               FontSize="50"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#4B5563"/>
                </Border>

                <TextBlock Text="Anero-Projekt"
                           FontSize="32"
                           FontWeight="SemiBold"
                           Foreground="#111827"
                           HorizontalAlignment="Center"
                           Margin="0 10 0 5"/>

                <TextBlock Text="Devam etmek için giriş yapın"
                           FontSize="18"
                           Foreground="#6B7280"
                           Margin="0 4 0 24"
                           HorizontalAlignment="Center"/>


                <!-- EMAIL -->
                <Grid Margin="0 0 0 16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1"
                            CornerRadius="18"
                            Background="#EDF1FF"
                            Height="44">
                        <Border.Effect>
                            <DropShadowEffect Color="#FFFFFF"
                                              BlurRadius="18"
                                              ShadowDepth="-4"
                                              Opacity="0.9"/>
                        </Border.Effect>

                        <Grid Margin="16 0 12 0">
                            <TextBox x:Name="txtEmail"
                                     BorderThickness="0"
                                     Background="#00000000"
                                     Foreground="#4B5563"
                                     FontSize="13"
                                     VerticalContentAlignment="Center"
                                     GotFocus="Email_GotFocus"
                                     LostFocus="Email_LostFocus"/>
                        </Grid>
                    </Border>

                    <TextBlock Grid.Column="0"
                               Text="✉"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="8 0 10 0"
                               Foreground="#6B7280"/>
                </Grid>


                <!-- PASSWORD -->
                <Grid Margin="0 0 0 12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1"
                            CornerRadius="18"
                            Background="#EDF1FF"
                            Height="44">
                        <Border.Effect>
                            <DropShadowEffect Color="#FFFFFF"
                                              BlurRadius="18"
                                              ShadowDepth="-4"
                                              Opacity="0.9"/>
                        </Border.Effect>

                        <Grid Margin="16 0 12 0">
                            <TextBlock x:Name="pwdPlaceholder"
                           Text="Password"
                           Foreground="#9CA3AF"
                           FontSize="13"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>
                            
                            <PasswordBox x:Name="txtPassword"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Foreground="#4B5563"
                                         FontSize="13"
                                         VerticalContentAlignment="Center"
                                         GotFocus="txtPassword_GotFocus"
                                         LostFocus="txtPassword_LostFocus"/>
                        </Grid>
                    </Border>

                    <TextBlock Grid.Column="0"
                               Text="🔒"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="8 0 10 0"
                               Foreground="#6B7280"/>

                    <TextBlock Grid.Column="2"
                               Text="👁"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="8 0 8 0"
                               Foreground="#9CA3AF"/>
                </Grid>


                <!-- Remember + Forgot -->
                <Grid Margin="0 0 0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <CheckBox x:Name="chkRemember"/>
                        <TextBlock Text="Beni Hatırla"
                                   Margin="8 0"
                                   Foreground="#6B7280"
                                   FontSize="16"/>
                    </StackPanel>

                    <TextBlock Text="Şifremi Unuttum"
                               Grid.Column="1"
                               HorizontalAlignment="Right"
                               Foreground="#6366F1"
                               FontSize="16"
                               Cursor="Hand"/>
                </Grid>


                <!-- LOGIN BUTTON -->
                <Border CornerRadius="22"
                        Background="#E6EBFF"
                        Height="50"
                        Margin="0 0 0 14">
                    <Border.Effect>
                        <DropShadowEffect Color="#C7D2FE"
                                          BlurRadius="24"
                                          ShadowDepth="12"
                                          Opacity="0.9"/>
                    </Border.Effect>

                    <Button Content="Giriş Yap"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#111827"
                            FontWeight="SemiBold"
                            Click="Login_Click"
                            FontSize="30" 
                            Width="300"
                            />
                </Border>

                <TextBlock x:Name="lblInfo"
                           Text=""
                           Foreground="#EA580C"
                           FontSize="11"
                           TextAlignment="Center"
                           Margin="0 0 0 2"/>

            </StackPanel>

        </Border>

        <!-- SAĞ PANEL -->
        <Border Grid.Column="1"
            Background="#FFFFFF"
            CornerRadius="40"
            Margin="10 50 40 40"
            Padding="24">

            <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                <Image Source="C:\Users\mucoa\Desktop\backend\FiberJobManager\FiberJobManager.Desktop\FiberJobManager.Desktop\FiberJobManager.Desktop\Images\Anero.jpg"
                   Width="450"
                   Margin="0 0 0 80" 
                   Opacity="0.9"/>

                <TextBlock Text=""
                       FontSize="40"
                       FontWeight="SemiBold"
                       Foreground="#1F2937"
                       HorizontalAlignment="Center"/>

                <TextBlock Text="Desktop Fiber Job Manager"
                       FontSize="20"
                       Foreground="#6B7280"
                       Margin="0 6 0 10"
                       HorizontalAlignment="Center"/>
                <TextBlock Text="v 0.0.1"
                           FontSize="14"
                           Foreground="#6b7280"
                           Margin="0 6 0 10"
                           HorizontalAlignment="Center"
                    />
            </StackPanel>

        </Border>


    </Grid>


</Window>
