<Window x:Class="FiberJobManager.Desktop.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard"
        Height="750"
        Width="900"
        Background="#F3F4F6"
        ResizeMode="NoResize">

    <!-- ⭐ BUTON STYLE (ortak) -->
    <Window.Resources>

        <Style x:Key="DashboardButton" TargetType="Button">
            <Setter Property="Height" Value="120"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8"
                                      ShadowDepth="1"
                                      Opacity="0.20"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>

                <!-- ⭐ HOVER EFEKT -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" 
                            Value="#6366f1"/>
                    <Setter Property="BorderBrush" 
                            Value="#6366F1"/>

                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.04" ScaleY="1.04"/>
                        </Setter.Value>
                    </Setter>

                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="16"
                                              ShadowDepth="2"
                                              Opacity="0.45"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

            </Style.Triggers>
        </Style>

    </Window.Resources>


    <!-- ⭐ ANA GRID -->
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🔹 ÜST PANEL -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 👤 Kullanıcı Kartı -->
            <Border Background="White"
                    CornerRadius="14"
                    Margin="12"
                    Padding="14">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="18"
                                      ShadowDepth="2"
                                      Opacity="0.25"/>
                </Border.Effect>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="👤" FontSize="48" Margin="0 0 16 0"/>

                    <StackPanel>
                        <TextBlock x:Name="lblUserName"
                                   Text="Mücahit ATEŞ"
                                   FontSize="20"
                                   FontWeight="Bold"/>

                        <TextBlock x:Name="lblEmail"
                                   Text="atesmuco@gmail.com"
                                   FontSize="14"
                                   Foreground="#6B7280"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 📊 İstatistik Kartı -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="14"
                    Margin="12"
                    Padding="14">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="18"
                                      ShadowDepth="2"
                                      Opacity="0.25"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- ✔ Tamamlanan -->
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Tamamlanan Projeler"
                                   FontSize="18"
                                   FontWeight="Bold"/>

                        <TextBlock x:Name="lblCompleted"
                                   Text="14"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="10"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Ayrım çizgisi -->
                    <Rectangle Grid.Column="1"
                                Width="2"
                                Margin="10,5,0,5"
                                Fill="Black"
                                HorizontalAlignment="Left"/>


                    <!-- ❗ Revize -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="Revize Bekleyen"
                                   FontSize="18"
                                   FontWeight="Bold"/>

                        <TextBlock x:Name="lblRevisions"
                                   Text="2"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#EF4444"
                                   Margin="10"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Ayrım çizgisi -->
                    <Rectangle Grid.Column="2"
                               Width="2"
                               Margin="-5,5,0,5"
                               Fill="black"
                               HorizontalAlignment="Left"/>
                    
                    <!--Atanan Yeni Çizim-->
                    
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="Atanan Yeni Çizim"
                                   FontSize="18"
                                   FontWeight="Bold"/>

                        <TextBlock x:Name="lblAssignedDrawings"
                                   Text="0"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#3B82F6"
                                   Margin="10"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>


                </Grid>
            </Border>            
        </Grid>


        <!-- 🔹 ORTA PANEL -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="16"
                Margin="12"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="18"
                                  ShadowDepth="2"
                                  Opacity="0.25"/>
            </Border.Effect>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ⭐ BUTON GRID -->
                <UniformGrid Grid.Row="0"
                             Columns="3"
                             Margin="10">

                    <Button Style="{StaticResource DashboardButton}" Click="Button_Click_4">
                        <TextBlock Text="Tüm Projeler"
                           FontSize="18"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           TextWrapping="Wrap"/>
                    </Button>

                    <Button Style="{StaticResource DashboardButton}" Click="Button_Click_3">
                        <TextBlock Text="Yeni Projeler"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Button>

                    <Button Style="{StaticResource DashboardButton}">
                        <TextBlock Text="Revize Bekleyen Projeler"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Button>

                    <Button Style="{StaticResource DashboardButton}" Click="Button_Click_5">
                        <TextBlock Text="Tamamlanan Projeler"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Button>

                    <Button Style="{StaticResource DashboardButton}" Click="Button_Click_2">
                        <TextBlock Text="Hazırlama Evrakları (Temp)"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Button>

                    <Button Style="{StaticResource DashboardButton}" 
                            Click="Button_Click_1">
                        <TextBlock Text="Linkler"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Button>

                    <Button Style="{StaticResource DashboardButton}">
                        <TextBlock Text="Private"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Button>

                    <Button Style="{StaticResource DashboardButton}" Click="Button_Click">
                        <TextBlock Text="Admin Panel"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Button>

                </UniformGrid>

                <!-- ℹ️ ALT VERSİYON -->
                <TextBlock Grid.Row="1"
                           Text="Fiber Job Manager · v 0.0.1"
                           FontSize="14"
                           Foreground="#6B7280"
                           HorizontalAlignment="Center"
                           Margin="0 10 0 0"/>
            </Grid>
        </Border>

    </Grid>
</Window>
