<Window x:Class="FiberJobManager.Desktop.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="600" Width="900"
        Background="#F3F4F6" ResizeMode="NoResize">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ÜST PANEL -->
        <Grid Grid.Row="0" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SOL: KULLANICI KARTI -->
            <Border Background="White"
                    CornerRadius="14"
                    Margin="12"
                    Padding="14">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="18"
                                      ShadowDepth="2"
                                      Opacity="0.25"/>
                </Border.Effect>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="👤" FontSize="48" Margin="0 0 16 0"/>

                    <StackPanel>
                        <TextBlock x:Name="lblUserName"
                                   Text="Mücahit ATEŞ"
                                   FontSize="20"
                                   FontWeight="Bold"/>

                        <TextBlock x:Name="lblEmail"
                                   Text="atesmuco@gmail.com"
                                   FontSize="14"
                                   Foreground="#6B7280"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- SAĞ: ÖZET SAYILAR -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="14"
                    Margin="12"
                    Padding="14">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="18"
                                      ShadowDepth="2"
                                      Opacity="0.25"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- TAMAMLANAN -->
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Tamamlanan Projeler"
                                   FontSize="18"
                                   FontWeight="bold"
                                   Foreground="black"/>

                        <TextBlock x:Name="lblCompleted"
                                   Text="14"
                                   HorizontalAlignment="Center"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#22C55E" 
                                   Margin="10"/>
                    </StackPanel>

                    <!-- AYIRICI -->
                    <Rectangle Grid.Column="1"
                               Width="2"
                               Fill="#E5E7EB"
                               HorizontalAlignment="Left"/>

                    <!-- REVİZE -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="Revize Bekleyen"
                                   FontSize="18"
                                   FontWeight="bold"
                                   Foreground="Black"/>

                        <TextBlock x:Name="lblRevisions"
                                   Text="2"
                                   Margin="10"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="center"
                                   Foreground="#EF4444"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- ORTA ALAN -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="16"
                Margin="12"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="18"
                                  ShadowDepth="2"
                                  Opacity="0.25"/>
            </Border.Effect>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- BUTONLAR -->
                <UniformGrid Grid.Row="0"
                             Columns="3"
                             Margin="10"
                             HorizontalAlignment="Center">

                    <!-- BUTON TEMPLATE -->
                    <Button Height="120" Margin="12" BorderBrush="Black">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FFFFFF"/>
                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Cursor" Value="Hand"/>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EEF2FF"/>
                                        <Setter Property="BorderBrush" Value="#6366F1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <TextBlock Text="Yeni Projeler"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Button>

                    <Button Height="120" Margin="12" BorderBrush="Black">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FFFFFF"/>
                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Cursor" Value="Hand"/>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EEF2FF"/>
                                        <Setter Property="BorderBrush" Value="#6366F1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        
                        <TextBlock Text="Revize Bekleyen Projeler"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Button>

                    <Button Height="120" Margin="12" BorderBrush="Black">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FFFFFF"/>
                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Cursor" Value="Hand"/>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EEF2FF"/>
                                        <Setter Property="BorderBrush" Value="#6366F1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        
                        <TextBlock Text="Tamamlanan Projeler"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Button>

                    <Button Height="120" Margin="12" BorderBrush="Black">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FFFFFF"/>
                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Cursor" Value="Hand"/>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EEF2FF"/>
                                        <Setter Property="BorderBrush" Value="#6366F1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        
                        <TextBlock Text="Hazırlama Evrakları(Temp)"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Button>

                    <Button Height="120" Margin="12" BorderBrush="Black">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FFFFFF"/>
                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Cursor" Value="Hand"/>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EEF2FF"/>
                                        <Setter Property="BorderBrush" Value="#6366F1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        
                        <TextBlock Text="Linkler"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Button>

                    <Button Height="120" Margin="12" BorderBrush="Black">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FFFFFF"/>
                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Cursor" Value="Hand"/>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EEF2FF"/>
                                        <Setter Property="BorderBrush" Value="#6366F1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        
                        <TextBlock Text="Admin Panel"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Button>

                </UniformGrid>

                <!-- ALT VERSİYON -->
                <TextBlock Grid.Row="1"
                           Text="Fiber Job Manager · v0.0.1"
                           FontSize="14"
                           Foreground="#6B7280"
                           HorizontalAlignment="Center"
                           Margin="0 10 0 0"/>
            </Grid>
        </Border>

    </Grid>
</Window>
