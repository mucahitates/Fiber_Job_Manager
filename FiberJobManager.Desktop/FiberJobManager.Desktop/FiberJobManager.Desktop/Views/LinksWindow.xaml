<Window x:Class="FiberJobManager.Desktop.Views.LinksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Linkler"
        Height="550"
        Width="900"
        Background="#F3F4F6"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 🔹 SOL PANEL : LİNKLER -->
        <Border Grid.Column="0"
                CornerRadius="20"
                Background="#E9D5FF"
                Padding="16">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="2"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Başlık -->
                <Border BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="6">
                    <TextBlock Text="Linkler"
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Link Listesi -->
                <ListBox x:Name="lstLinks"
                         Grid.Row="2"
                         Margin="0 10 0 0"
                         BorderThickness="0"
                         Background="Transparent"
                         SelectionChanged="lstLinks_SelectionChanged">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Margin" Value="0 8"/>
                            <Setter Property="Cursor" Value="Hand"/>

                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="card"
                                                Background="#22D3EE"
                                                CornerRadius="10"
                                                Padding="12"
                                                Height="48">
                                            <ContentPresenter/>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="card" Property="Background" Value="#06B6D4"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}"
                                       FontSize="16"
                                       FontWeight="Bold"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
            </Grid>
        </Border>

        <!-- 🔹 SAĞ PANEL : KİŞİLER -->
        <Border Grid.Column="1"
                CornerRadius="20"
                Background="#A5F3FC"
                Padding="16"
                Margin="10 0 0 0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="2"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Başlık -->
                <Border BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="6">
                    <TextBlock Text="Kişiler"
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Kişi Listesi -->
                <ListBox x:Name="lstPeople"
                         Grid.Row="2"
                         Margin="0 10 0 0"
                         BorderThickness="0"
                         Background="Transparent">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Margin" Value="0 6"/>
                            <Setter Property="Cursor" Value="Hand"/>

                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="#E9D5FF"
                                                CornerRadius="10"
                                                Height="60">
                                            <ContentPresenter Margin="10 0"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{Binding Name}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1"
                                           Text="{Binding Company}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="2"
                                           Text="{Binding Phone}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
            </Grid>
        </Border>

    </Grid>
</Window>
