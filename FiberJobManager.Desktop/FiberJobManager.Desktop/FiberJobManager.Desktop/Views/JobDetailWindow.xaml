<Window x:Class="FiberJobManager.Desktop.Views.JobDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="İş Detayı"
        Width="1600"
        Height="900"
        WindowStartupLocation="CenterScreen"
        Background="#D4D4D8">

    <Grid Margin="20">
        <!-- 3 KOLONLU YAPI: SOL (Menü) | ORTA (Dinamik İçerik) | SAĞ (Checklist) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <!-- Sol Panel -->
            <ColumnDefinition Width="*"/>
            <!-- Orta Panel -->
            <ColumnDefinition Width="360"/>
            <!-- Sağ Panel -->
        </Grid.ColumnDefinitions>

        <!-- ============================================ -->
        <!-- SOL PANEL: MENÜ VE PROJE BİLGİLERİ -->
        <!-- ============================================ -->
        <Border Grid.Column="0"
                Background="#FFFFFF"
                CornerRadius="16"
                BorderBrush="#CBD5E1"
                BorderThickness="1"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="20" ShadowDepth="4"/>
            </Border.Effect>

            <StackPanel>
                <!-- Buton Stilleri (En Başta Olmalı!) -->
                <StackPanel.Resources>
                    <Style TargetType="Button" x:Key="PassiveButtonStyle">
                        <Setter Property="Height" Value="60"/>
                        <Setter Property="Margin" Value="0,0,0,12"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Background" Value="#F8FAFC"/>
                        <Setter Property="Foreground" Value="#334155"/>
                        <Setter Property="BorderBrush" Value="#94A3B8"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E2E8F0"/>
                                            <Setter Property="BorderBrush" Value="#475569"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>

                <!-- Başlık -->
                <TextBlock Text="İŞ DETAYI"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#1E293B"
                           Margin="0,0,0,20"/>

                <!-- Proje Bilgileri Kutusu -->
                <Border Background="#F1F5F9"
                        CornerRadius="12"
                        BorderBrush="#94A3B8"
                        BorderThickness="1"
                        Padding="15"
                        Margin="0,0,0,30">
                    <StackPanel>
                        <!-- İş ID -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="ID" Foreground="#64748B" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtJobId" Grid.Column="1" Text="376" Foreground="#0F172A" FontWeight="Bold"/>
                        </Grid>

                        <!-- HK -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="HK" Foreground="#64748B" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtHK" Grid.Column="1" Text="553R201" Foreground="#0F172A" FontWeight="Bold"/>
                        </Grid>

                        <!-- NVT -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="NVT" Foreground="#64748B" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtNVT" Grid.Column="1" Text="8001" Foreground="#0F172A" FontWeight="Bold"/>
                        </Grid>

                        <!-- SM (Firma) -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="SM" Foreground="#64748B" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtSM" Grid.Column="1" Text="Quick-City" Foreground="#0F172A" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Menü Butonları -->

                <!-- Buton 1: Fotoğraflar (Aktif/Mavi) -->
                <Button x:Name="BtnPhotos"
                        Content="📸 Fotoğraflar / Belge / Not"
                        Click="BtnPhotos_Click"
                        Height="60"
                        Margin="0,0,0,12"
                        FontSize="15"
                        FontWeight="Bold"
                        Background="#2563EB"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Buton 2: Sesli Notlar -->
                <Button x:Name="BtnAudio" 
                        Content="🎤 Sesli Notlar" 
                        Style="{StaticResource PassiveButtonStyle}" 
                        Click="BtnAudio_Click"/>

                <!-- Buton 3: Revize Geçmişi -->
                <Button x:Name="BtnRevision" 
                        Content="📋 Revize Geçmişi" 
                        Style="{StaticResource PassiveButtonStyle}" 
                        Click="BtnRevision_Click"/>

                <!-- Buton 4: Çizim Yükleme -->
                <Button x:Name="BtnUpload" 
                        Content="🖊️ Çizim Yükleme" 
                        Style="{StaticResource PassiveButtonStyle}" 
                        Click="BtnUpload_Click"/>

            </StackPanel>
        </Border>

        <!-- ============================================ -->
        <!-- ORTA PANEL: DİNAMİK İÇERİK ALANI -->
        <!-- Sol panelden seçilen butona göre burası dolar -->
        <!-- ============================================ -->
        <Border Grid.Column="1"
                Background="#FFFFFF"
                CornerRadius="16"
                BorderBrush="#CBD5E1"
                BorderThickness="1"
                Margin="15,0"
                Padding="40">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="20" ShadowDepth="4"/>
            </Border.Effect>

            <!-- ContentArea: UserControl'ler buraya yüklenecek -->
            <ContentControl x:Name="ContentArea"/>
        </Border>

        <!-- ============================================ -->
        <!-- SAĞ PANEL: YAPILACAKLAR CHECKLIST -->
        <!-- ============================================ -->
        <Border Grid.Column="2"
                Background="#FFFFFF"
                CornerRadius="16"
                BorderBrush="#CBD5E1"
                BorderThickness="1"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="20" ShadowDepth="4"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Başlık -->
                    <RowDefinition Height="*"/>
                    <!-- Checklist -->
                    <RowDefinition Height="Auto"/>
                    <!-- Teslim Butonu -->
                </Grid.RowDefinitions>

                <!-- Başlık -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="✅ YAPILACAKLAR"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#1E293B"/>
                    <Separator Margin="0,10,0,0" Background="#E2E8F0"/>
                </StackPanel>

                <!-- Checklist (Scrollable) -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Checkbox Stili -->
                        <StackPanel.Resources>
                            <Style TargetType="Border" x:Key="CheckItemBorder">
                                <Setter Property="Background" Value="#F8FAFC"/>
                                <Setter Property="BorderBrush" Value="#CBD5E1"/>
                                <Setter Property="BorderThickness" Value="1.5"/>
                                <Setter Property="CornerRadius" Value="8"/>
                                <Setter Property="Padding" Value="15"/>
                                <Setter Property="Margin" Value="0,0,0,10"/>
                            </Style>
                        </StackPanel.Resources>

                        <!-- Checkbox 1: Fotoğraflar -->
                        <Border Style="{StaticResource CheckItemBorder}">
                            <CheckBox x:Name="ChkPhotos" 
                                      Content="📸 Fotoğraflar" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"/>
                        </Border>

                        <!-- Checkbox 2: Ses Notları -->
                        <Border Style="{StaticResource CheckItemBorder}">
                            <CheckBox x:Name="ChkAudio" 
                                      Content="🎤 Ses Notları" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"/>
                        </Border>

                        <!-- Checkbox 3: PDF Belgeler -->
                        <Border Style="{StaticResource CheckItemBorder}">
                            <CheckBox x:Name="ChkDocuments" 
                                      Content="📄 PDF Belgeler" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"/>
                        </Border>

                        <!-- Checkbox 4: Revize Geçmişi -->
                        <Border Style="{StaticResource CheckItemBorder}">
                            <CheckBox x:Name="ChkRevision" 
                                      Content="📋 Revize Geçmişi" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"/>
                        </Border>

                        <!-- Checkbox 5: Çizim Tamamla -->
                        <Border Style="{StaticResource CheckItemBorder}">
                            <CheckBox x:Name="ChkDrawing" 
                                      Content="🖊️ Çizim Tamamla" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"/>
                        </Border>

                        <!-- Checkbox 6: Çizim Yükle -->
                        <Border Style="{StaticResource CheckItemBorder}">
                            <CheckBox x:Name="ChkUpload" 
                                      Content="📤 Çizim Yükle" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"/>
                        </Border>

                    </StackPanel>
                </ScrollViewer>

                <!-- Teslim Et Butonu (Alt) -->
                <Button Grid.Row="2"
                        x:Name="BtnSubmit"
                        Content="✅ TESLİM ET"
                        Height="55"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#10B981"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,15,0,0"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>