<Window x:Class="FiberJobManager.Desktop.Views.DetailJobWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="İş Detayı" 
        Height="850" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F0F4F8"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="PrimaryDarkColor" Color="#2563EB"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
        <SolidColorBrush x:Key="SuccessDarkColor" Color="#059669"/>
        <SolidColorBrush x:Key="TextDark" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextLight" Color="#64748B"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="HoverBackground" Color="#EFF6FF"/>

        <Style x:Key="CardPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#64748B" Direction="270" ShadowDepth="4" BlurRadius="20" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="54"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="15,0">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBackground}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#10B981" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.2"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SuccessDarkColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="LayoutTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource CardPanelStyle}" Margin="0,0,24,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,24">
                    <TextBlock Text="İŞ DETAYI" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextLight}"
                               />
                    <Rectangle Height="4" Width="40" Fill="{StaticResource PrimaryColor}" HorizontalAlignment="Left" RadiusX="2" RadiusY="2" Margin="0,8,0,0"/>
                </StackPanel>

                <Border Grid.Row="1" 
                        Background="#F8FAFC" 
                        CornerRadius="12" 
                        Padding="20" 
                        Margin="0,0,0,32"
                        BorderBrush="#E2E8F0"
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID" Foreground="{StaticResource TextLight}" FontWeight="Medium" Margin="0,0,0,12"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtId" Text="#376" Foreground="{StaticResource TextDark}" FontWeight="Bold" Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="HK" Foreground="{StaticResource TextLight}" FontWeight="Medium" Margin="0,0,0,12"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtHK" Text="5538201" Foreground="{StaticResource TextDark}" FontWeight="SemiBold" Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="NVT" Foreground="{StaticResource TextLight}" FontWeight="Medium" Margin="0,0,0,12"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtNVT" Text="8001" Foreground="{StaticResource TextDark}" FontWeight="SemiBold" Margin="0,0,0,12"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="SM" Foreground="{StaticResource TextLight}" FontWeight="Medium"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtSM" Text="Quick-City" Foreground="{StaticResource PrimaryColor}" FontWeight="Bold"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Row="2">
                    <TextBlock Text="İŞLEMLER" FontSize="12" Foreground="{StaticResource TextLight}" FontWeight="SemiBold" Margin="10,0,0,10"/>

                    <Button x:Name="BtnFotograflar" Click="BtnFotograflar_Click" Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="36" Height="36" CornerRadius="8" Background="#EFF6FF" Margin="0,0,15,0">
                                <TextBlock Text="📁" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource PrimaryColor}"/>
                            </Border>
                            <TextBlock Text="Fotoğraflar / Belgeler" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnSesliNotlar" Click="BtnSesliNotlar_Click" Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="36" Height="36" CornerRadius="8" Background="#FDF2F8" Margin="0,0,15,0">
                                <TextBlock Text="🎤" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#DB2777"/>
                            </Border>
                            <TextBlock Text="Sesli Notlar" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnRevizeGecmisi" Click="BtnRevizeGecmisi_Click" Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="36" Height="36" CornerRadius="8" Background="#FFF7ED" Margin="0,0,15,0">
                                <TextBlock Text="📋" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#EA580C"/>
                            </Border>
                            <TextBlock Text="Revize Geçmişi" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnCizimYukleme" Click="BtnCizimYukleme_Click" Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="36" Height="36" CornerRadius="8" Background="#F0FDF4" Margin="0,0,15,0">
                                <TextBlock Text="✏️" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource SuccessColor}"/>
                            </Border>
                            <TextBlock Text="Çizim Yükleme" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource CardPanelStyle}" Margin="0,0,24,0" Padding="0">
            <Grid>
                <Border Height="60" VerticalAlignment="Top" Background="Transparent" BorderBrush="#F1F5F9" BorderThickness="0,0,0,1">
                    <TextBlock Text="İçerik Önizleme" VerticalAlignment="Center" Margin="24,0" Foreground="{StaticResource TextLight}" FontSize="14"/>
                </Border>

                <ContentControl x:Name="ContentArea" Margin="24,84,24,24"/>
            </Grid>
        </Border>

        <Border Grid.Column="2" Style="{StaticResource CardPanelStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,24">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#ECFDF5" CornerRadius="20" Width="32" Height="32" Margin="0,0,12,0">
                            <TextBlock Text="✓" Foreground="{StaticResource SuccessColor}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="YAPILACAKLAR" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextDark}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <Separator Margin="0,16,0,0" Background="#F1F5F9"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Medya / Belge" FontSize="12" Foreground="{StaticResource TextLight}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <CheckBox Content="Fotoğraflar"/>
                        <CheckBox Content="Ses Notları"/>
                        <CheckBox Content="PDF Belgeler"/>

                        <Separator Margin="0,8,0,16" Background="#F1F5F9"/>

                        <TextBlock Text="Teknik Süreç" FontSize="12" Foreground="{StaticResource TextLight}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <CheckBox Content="Revize Geçmişi"/>
                        <CheckBox Content="Çizim Tamamla"/>
                        <CheckBox Content="Çizim Yükle"/>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2">
                    <Button Style="{StaticResource ActionButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📤" Margin="0,0,10,0" FontSize="18" VerticalAlignment="Center"/>
                            <TextBlock Text="TESLİM ET" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>