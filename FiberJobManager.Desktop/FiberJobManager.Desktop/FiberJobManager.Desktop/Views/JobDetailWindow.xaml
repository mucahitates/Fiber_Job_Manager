<Window x:Class="FiberJobManager.Desktop.Views.DetailJobWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="İş Detayı" 
        Height="800" 
        Width="1500"
        WindowStartupLocation="CenterScreen"
        Background="#F1F5F9">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- ========================================
             SOL PANEL - İŞ DETAYI VE BUTONLAR
             ======================================== -->
        <Border Grid.Column="0"
                Background="White"
                CornerRadius="12"
                Padding="20"
                Margin="0,0,15,0"
                BorderBrush="#E2E8F0"
                BorderThickness="1">

            <StackPanel>
                <!-- İŞ DETAYI BAŞLIK -->
                <TextBlock Text="İŞ DETAYI"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                <!-- İŞ BİLGİLERİ -->
                <Border Background="#F8FAFC"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- ID -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="ID" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,15,8"/>
                        <TextBlock x:Name="TxtId" 
                                   Grid.Row="0" Grid.Column="1" 
                                   Text="376"
                                   Margin="0,0,0,8"/>

                        <!-- HK -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="HK" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,15,8"/>
                        <TextBlock x:Name="TxtHK" 
                                   Grid.Row="1" Grid.Column="1" 
                                   Text="5538201"
                                   Margin="0,0,0,8"/>

                        <!-- NVT -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="NVT" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,15,8"/>
                        <TextBlock x:Name="TxtNVT" 
                                   Grid.Row="2" Grid.Column="1" 
                                   Text="8001"
                                   Margin="0,0,0,8"/>

                        <!-- SM -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="SM" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,15,0"/>
                        <TextBlock x:Name="TxtSM" 
                                   Grid.Row="3" Grid.Column="1" 
                                   Text="Quick-City"/>
                    </Grid>
                </Border>

                <!-- MENÜ BUTONLARI -->

                <!-- Fotoğraflar -->
                <Button x:Name="BtnFotograflar"
                        Click="BtnFotograflar_Click"
                        Height="45"
                        Margin="0,0,0,10"
                        Cursor="Hand"
                        Background="White"
                        Foreground="#3B82F6"
                        BorderBrush="#E2E8F0"
                        BorderThickness="1">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8"
                                                Padding="10">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📁" 
                                                           FontSize="16" 
                                                           Margin="0,0,10,0"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="Fotoğraflar / Belge / Not"
                                                           FontSize="13"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Sesli Notlar -->
                <Button x:Name="BtnSesliNotlar"
                        Click="BtnSesliNotlar_Click"
                        Height="45"
                        Margin="0,0,0,10"
                        Cursor="Hand"
                        Background="White"
                        Foreground="#3B82F6"
                        BorderBrush="#E2E8F0"
                        BorderThickness="1">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8"
                                                Padding="10">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🎤" 
                                                           FontSize="16" 
                                                           Margin="0,0,10,0"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="Sesli Notlar"
                                                           FontSize="13"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Revize Geçmişi -->
                <Button x:Name="BtnRevizeGecmisi"
                        Click="BtnRevizeGecmisi_Click"
                        Height="45"
                        Margin="0,0,0,10"
                        Cursor="Hand"
                        Background="White"
                        Foreground="#3B82F6"
                        BorderBrush="#E2E8F0"
                        BorderThickness="1">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8"
                                                Padding="10">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📋" 
                                                           FontSize="16" 
                                                           Margin="0,0,10,0"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="Revize Geçmişi"
                                                           FontSize="13"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Çizim Yükleme -->
                <Button x:Name="BtnCizimYukleme"
                        Click="BtnCizimYukleme_Click"
                        Height="45"
                        Cursor="Hand"
                        Background="White"
                        Foreground="#3B82F6"
                        BorderBrush="#E2E8F0"
                        BorderThickness="1">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8"
                                                Padding="10">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="✏️" 
                                                           FontSize="16" 
                                                           Margin="0,0,10,0"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="Çizim Yükleme"
                                                           FontSize="13"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>

        <!-- ========================================
             ORTA ALAN - DİNAMİK İÇERİK
             ======================================== -->
        <Border Grid.Column="1"
                Background="White"
                CornerRadius="12"
                Margin="0,0,15,0"
                BorderBrush="#E2E8F0"
                BorderThickness="1">

            <!-- Buraya AudioNotesPanel ve diğer paneller yüklenecek -->
            <ContentControl x:Name="ContentArea"/>

        </Border>

        <!-- ========================================
             SAĞ PANEL - YAPILACAKLAR
             ======================================== -->
        <Border Grid.Column="2"
                Background="White"
                CornerRadius="12"
                Padding="20"
                BorderBrush="#E2E8F0"
                BorderThickness="1">

            <StackPanel>
                <!-- Başlık -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="✓" FontSize="20" Margin="0,0,10,0"/>
                    <TextBlock Text="YAPILACAKLAR"
                               FontSize="18"
                               FontWeight="Bold"/>
                </StackPanel>

                <!-- Yapılacaklar listesi -->
                <CheckBox Content="📷 Fotoğraflar" Margin="0,0,0,10"/>
                <CheckBox Content="🎤 Ses Notları" Margin="0,0,0,10"/>
                <CheckBox Content="📄 PDF Belgeler" Margin="0,0,0,10"/>
                <CheckBox Content="📋 Revize Geçmişi" Margin="0,0,0,10"/>
                <CheckBox Content="✏️ Çizim Tamamla" Margin="0,0,0,10"/>
                <CheckBox Content="📦 Çizim Yükle" Margin="0,0,0,20"/>

                <!-- Teslim Et Butonu -->
                <Button Content="📤 TESLİM ET"
                        Height="50"
                        Background="#10B981"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
