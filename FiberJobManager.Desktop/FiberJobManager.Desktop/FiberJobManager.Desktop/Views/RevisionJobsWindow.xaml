<Window x:Class="FiberJobManager.Desktop.Views.RevisionJobsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Revize Bekleyen Projeler"
        Height="820" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F9">

    <Grid Margin="22">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Başlık ve Toplam -->
        <Grid Grid.Row="0" Margin="0 0 0 16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock Text="Revize Bekleyen Projeler" FontSize="28" FontWeight="SemiBold" Foreground="#1F2937"/>
                <TextBlock Text="Revize edilmesi gereken projeler" FontSize="13" Foreground="#6B7280" Margin="0 4 0 0"/>
            </StackPanel>
            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="14" BorderBrush="Red" BorderThickness="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Toplam Revize:" FontSize="18" Foreground="Red" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtTotalRevision" Text="0" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Foreground="#374151" Margin="8 0 0 0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- DataGrid -->
        <Border Grid.Row="1" Background="White" CornerRadius="16" Padding="16" BorderBrush="#E5E7EB" BorderThickness="1" Margin="10">
            <Grid>
                <DataGrid x:Name="RevisionJobsGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserResizeColumns="False"
                          CanUserReorderColumns="False"
                          CanUserSortColumns="False" 
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          Background="White"
                          BorderBrush="#D1D5DB"
                          BorderThickness="1"
                          HorizontalGridLinesBrush="#E5E7EB"
                          VerticalGridLinesBrush="#E5E7EB"
                          RowHeight="45" 
                          AlternatingRowBackground="#F9FAFB"
                          ColumnWidth="*">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Background" Value="#F3F4F6"/>
                            <Setter Property="Foreground" Value="#111827"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderBrush" Value="#D1D5DB"/>
                            <Setter Property="BorderThickness" Value="0,0,1,2"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="#E5E7EB"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Focusable" Value="False"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="Foreground" Value="#1F2937"/>
                                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="0.6*" FontSize="16">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Firma" 
                                            Binding="{Binding Firma}" 
                                            FontWeight="SemiBold"
                                            Width="1.5*" 
                                            FontSize="16">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="5,0"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Bölge" 
                                            Binding="{Binding Bolge}" 
                                            Width="1*"
                                            FontSize="16"
                                            FontWeight="SemiBold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="HK" 
                                            Binding="{Binding HK}" 
                                            Width="0.8*"
                                            FontSize="16"
                                            FontWeight="SemiBold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="SM" Binding="{Binding SM}" Width="0.8*" FontSize="16" FontWeight="SemiBold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="NVT" Binding="{Binding NVT}" Width="0.7*" FontSize="16" FontWeight="SemiBold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Proje Durumu -->
                        <DataGridTemplateColumn Header="Proje Durumu" Width="1.8*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Ellipse Width="12" Height="12" 
                                                 Stroke="Gray" StrokeThickness="1"
                                                 Margin="5,0,8,0"
                                                 VerticalAlignment="Center">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="Gray"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding FieldStatus}" Value="0">
                                                            <Setter Property="Fill" Value="Gold"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding FieldStatus}" Value="1">
                                                            <Setter Property="Fill" Value="OrangeRed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding FieldStatus}" Value="2">
                                                            <Setter Property="Fill" Value="LimeGreen"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <ComboBox SelectedValue="{Binding FieldStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  HorizontalAlignment="Center"
                                                  SelectedValuePath="Tag"
                                                  Width="120">
                                            <ComboBoxItem Content="Yapılmadı" Tag="0" />
                                            <ComboBoxItem Content="Yapılamıyor" Tag="1" />
                                            <ComboBoxItem Content="Tamamlandı" Tag="2" />
                                        </ComboBox>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Revize Tarihi"
                                            Binding="{Binding RevisionDate, StringFormat=dd.MM.yyyy HH:mm}"
                                            Width="1.5*"
                                            FontSize="16"
                                            FontWeight="SemiBold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#374151"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Revize Atayan"
                                            Binding="{Binding RevisionAssignedByName}"
                                            Width="1.2*"
                                            FontSize="16"
                                            FontWeight="SemiBold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#6B7280"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Revize Geçmişi -->
                        <DataGridTemplateColumn Header="Revize Geçmişi" Width="1*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Cursor="Help"
                                                ToolTipService.ShowDuration="30000">
                                        <StackPanel.ToolTip>
                                            <ToolTip MaxWidth="500">
                                                <ItemsControl ItemsSource="{Binding RevisionHistory}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="#F9FAFB" 
                                                                    BorderBrush="#E5E7EB" 
                                                                    BorderThickness="1" 
                                                                    CornerRadius="8" 
                                                                    Padding="12" 
                                                                    Margin="0,0,0,8">
                                                                <StackPanel>
                                                                    <TextBlock FontWeight="Bold" 
                                                                               FontSize="13" 
                                                                               Foreground="#374151" 
                                                                               Margin="0,0,0,6">
                                                                        <Run Text="Revize Atayan: "/>
                                                                        <Run Text="{Binding AssignedByName}"/>
                                                                    </TextBlock>

                                                                    <TextBlock FontSize="12" 
                                                                               Foreground="#4B5563" 
                                                                               Margin="0,0,0,4">
                                                                        <Run Text="Neden: " FontWeight="SemiBold"/>
                                                                        <Run Text="{Binding RevisionReason}"/>
                                                                    </TextBlock>

                                                                    <TextBlock FontSize="11" 
                                                                               Foreground="#6B7280" 
                                                                               Margin="0,0,0,2">
                                                                        <Run Text="Tarih: "/>
                                                                        <Run Text="{Binding RevisionDate, StringFormat='dd.MM.yyyy HH:mm'}"/>
                                                                    </TextBlock>

                                                                    <TextBlock FontSize="11" 
                                                                               Foreground="#059669">
                                                                        <Run Text="✓ Tamamlandı: "/>
                                                                        <Run Text="{Binding CompletedDate, StringFormat='dd.MM.yyyy HH:mm', TargetNullValue=''}"/>
                                                                    </TextBlock>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ToolTip>
                                        </StackPanel.ToolTip>

                                        <TextBlock Text="📋" FontSize="16" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding RevisionCount}" 
                                                   FontSize="16" 
                                                   FontWeight="Bold" 
                                                   Foreground="#6B7280"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Detay" Width="0.6*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="📝" 
                                            Width="36" 
                                            Height="28" 
                                            Cursor="Hand" 
                                            Focusable="False" 
                                            Background="#F3F4F6"
                                            BorderBrush="Red"
                                            Click="BtnOpenNote_Click" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Revize Notu Popup -->
                <Popup x:Name="NotePopup" 
                       Placement="Center" 
                       PlacementTarget="{Binding ElementName=RevisionJobsGrid}"
                       AllowsTransparency="True"
                       StaysOpen="False">
                    <Border Background="White" 
                            BorderBrush="#6B7280" 
                            BorderThickness="2" 
                            CornerRadius="12" 
                            Padding="20" 
                            Width="400">
                        <StackPanel>
                            <TextBlock Text="Revize Notu" 
                                       FontWeight="Bold" 
                                       FontSize="20" 
                                       Margin="0,0,0,12" 
                                       Foreground="Red"/>

                            <TextBlock Text="Admin Notu:" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtRevisionReason" 
                                     Height="80" 
                                     TextWrapping="Wrap"
                                     IsReadOnly="True"
                                     Background="#F9FAFB"
                                     Padding="10" 
                                     Margin="0,0,0,15"
                                     VerticalScrollBarVisibility="Auto"/>

                            <TextBlock Text="Notunuz:" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtProjectNote" 
                                     Height="80" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True" 
                                     Padding="10" 
                                     Margin="0,0,0,15"/>

                            <UniformGrid Columns="2">
                                <Button Content="İptal" 
                                        Click="BtnCloseNote_Click"
                                        Margin="0,0,5,0" 
                                        Height="35"
                                        Background="#E5E7EB" 
                                        BorderThickness="0"/>
                                <Button Content="Kaydet"
                                        Background="Green"
                                        Foreground="White"
                                        Height="35"
                                        BorderThickness="0"
                                        Click="BtnSaveNote_Click"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
        </Border>
    </Grid>
</Window>