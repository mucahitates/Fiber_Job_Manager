<Window x:Class="FiberJobManager.Desktop.Views.TempDocumentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hazırlama Evrakları (Temp)"
        Height="520" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">

    <Grid Margin="14">

        <!-- Card -->
        <Border Background="#111827"
                CornerRadius="18"
                Padding="18"
                BorderBrush="#1F2937"
                BorderThickness="1">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <StackPanel>
                        <TextBlock Text="Hazırlama Evrakları"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#F3F4F6" />
                        <TextBlock Text="DWT — DWG — LSP dosyaları"
                                   FontSize="12"
                                   Foreground="#9CA3AF"/>
                    </StackPanel>

                </StackPanel>

                <!-- TABLE -->
                <Border Grid.Row="1"
                        Background="#020617"
                        CornerRadius="14"
                        Padding="10"
                        Margin="0,14,0,0">

                    <DataGrid x:Name="dgTempDocs"
                              RowHeaderWidth="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="All"
                              GridLinesVisibility="All"
                              RowHeight="42"
                              Background="Transparent"
                              Foreground="#E5E7EB"
                              BorderThickness="0"
                              HorizontalGridLinesBrush="#374151"
                              VerticalGridLinesBrush="#374151"
                              RowBackground="#020617"
                              AlternatingRowBackground="#020617"
                              PreviewMouseLeftButtonDown="dgTempDocs_PreviewMouseLeftButtonDown" Margin="-4,0,0,0">

                        <!-- HEADER STYLE -->
                        <DataGrid.Resources>

                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#020617"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="10"/>
                                <!-- Sağ ve altta çizgi -->
                                <Setter Property="BorderThickness" Value="2,2,2,2"/>
                                <Setter Property="BorderBrush" Value="#374151"/>
                            </Style>


                            <!-- Primary Button -->
                            <Style TargetType="Button" x:Key="PrimaryBtn">
                                <Setter Property="Background" Value="#2563EB"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="10,4"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3B82F6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                        </DataGrid.Resources>

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Dosya Adı"
                                                Binding="{Binding FileName}"
                                                Width="*"/>

                            <DataGridTextColumn Header="Firma"
                                                Binding="{Binding Firma}"
                                                Width="220"/>

                            <DataGridTextColumn Header="Proje Türü"
                                                Binding="{Binding ProjeTuru}"
                                                Width="220"/>

                            <DataGridTemplateColumn Header="İndir" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="İndir"
                                                Style="{StaticResource PrimaryBtn}"
                                                Tag="{Binding}"
                                                />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>

                    </DataGrid>
                </Border>

            </Grid>
        </Border>

    </Grid>
</Window>
