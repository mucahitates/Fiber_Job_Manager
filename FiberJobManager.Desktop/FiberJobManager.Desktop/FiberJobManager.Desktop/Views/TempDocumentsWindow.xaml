<Window x:Class="FiberJobManager.Desktop.Views.TempDocumentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hazırlama Evrakları (Temp)"
        Height="520" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#EEF2FF">

    <Grid Margin="14">

        <!-- OUTER CARD -->
        <Border Background="#F8FAFF"
                CornerRadius="18"
                Padding="18"
                BorderBrush="#CBD5E1"
                BorderThickness="2">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <StackPanel>
                    <TextBlock Text="Hazırlama Evrakları"
                               FontSize="20"
                               FontWeight="Bold"                              
                               Foreground="#111827" />
                    <TextBlock Text="(DWT — DWG — LSP) Firmalara ait dosyalar"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,5,0,0"
                               Foreground="#475569"/>
                </StackPanel>

                <!-- INNER CARD -->
                <Border Grid.Row="1"
                        Background="#F1F5FF"
                        CornerRadius="14"
                        Padding="10"
                        Margin="0,14,0,0"
                        BorderBrush="#CBD5E1"
                        BorderThickness="2">

                    <DataGrid x:Name="dgTempDocs"
                              CanUserResizeColumns="False"
                              CanUserReorderColumns="False"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="All"
                              RowHeaderWidth="0"
                              RowHeight="42"
                              Background="Transparent"
                              RowBackground="#F8FAFF"
                              AlternatingRowBackground="#F1F5FF"
                              Foreground="#111827"
                              BorderThickness="0"
                              HorizontalGridLinesBrush="#cbd5e1"
                              VerticalGridLinesBrush="#cbd5e1"
                              PreviewMouseLeftButtonDown="dgTempDocs_PreviewMouseLeftButtonDown" SelectionChanged="dgTempDocs_SelectionChanged_1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">

                        <!-- STYLES -->
                        <DataGrid.Resources>

                            <Style TargetType="TextBlock" x:Key="CenterText">
                                <Setter Property="TextAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                            
                            <!-- HEADER -->
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Background" Value="#E0E7FF"/>
                                <Setter Property="Foreground" Value="#1F2937"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="BorderThickness" Value="1,1,1,1"/>
                                <Setter Property="BorderBrush" Value="#cbd5e1"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E0E7FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <!-- PRIMARY BUTTON -->
                            <Style TargetType="Button" x:Key="PrimaryBtn">
                                <Setter Property="Background" Value="#4F46E5 "/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="10,4"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#6366F1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                        </DataGrid.Resources>

                        <!-- COLUMNS -->
                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Dosya Adı"
                                                Binding="{Binding FileName}"
                                                Width="*"
                                                ElementStyle="{StaticResource CenterText}"/>

                            <DataGridTextColumn Header="Firma"
                                                Binding="{Binding Firma}"
                                                Width="220"
                                                ElementStyle="{StaticResource CenterText}"/>

                            <DataGridTextColumn Header="Proje Türü"
                                                Binding="{Binding ProjeTuru}"
                                                Width="220"
                                                ElementStyle="{StaticResource CenterText}"/>

                            <DataGridTemplateColumn Header="İndir" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="İndir"
                                                Style="{StaticResource PrimaryBtn}"
                                                Tag="{Binding}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>

                    </DataGrid>
                </Border>

            </Grid>
        </Border>

    </Grid>
</Window>
