<Window x:Class="FiberJobManager.Desktop.Views.NewJobsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yeni Projeler"
        Height="820" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F9">

    <Grid Margin="22">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0 0 0 16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Yeni Projeler" FontSize="28" FontWeight="SemiBold" Foreground="#1F2937"/>
                <TextBlock Text="Size atanmış ve henüz işleme alınmamış projeler" FontSize="13" Foreground="#6B7280" Margin="0 4 0 0"/>
            </StackPanel>

            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="14" BorderBrush="Black" BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Toplam Yeni:" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtTotalNew" Text="3" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Foreground="#2563EB" Margin="8 0 0 0"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="1" Background="White" CornerRadius="16" Padding="16" BorderBrush="Black" BorderThickness="1" Margin="10">
            <Grid>
                <DataGrid x:Name="NewJobsGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserResizeColumns="False"
                          CanUserReorderColumns="False"
                          CanUserSortColumns="False" 
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          Background="White"
                          BorderBrush="#D1D5DB"
                          BorderThickness="1"
                          HorizontalGridLinesBrush="#E5E7EB"
                          VerticalGridLinesBrush="#E5E7EB"
                          RowHeight="45" 
                          AlternatingRowBackground="#F9FAFB"
                          ColumnWidth="*">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Background" Value="#F3F4F6"/>
                            <Setter Property="Foreground" Value="#111827"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderBrush" Value="#D1D5DB"/>
                            <Setter Property="BorderThickness" Value="0,0,1,2"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>

                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="#E5E7EB"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Focusable" Value="False"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#F0F7FF"/>
                                    <Setter Property="Foreground" Value="#1E40AF"/>
                                    <Setter Property="BorderBrush" Value="#BFDBFE"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Proje Id" Binding="{Binding Id}" Width="0.8*" FontSize="16">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Firma" 
                                            Binding="{Binding Firma}" 
                                            FontWeight="SemiBold"
                                            Width="1.2*" 
                                            FontSize="16">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="5,0"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Bölge" 
                                            Binding="{Binding Bolge}" 
                                            Width="1.7*"
                                            FontSize="16"
                                            FontWeight="SemiBold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="HK" 
                                            Binding="{Binding HK}" 
                                            Width="0.9*"
                                            FontSize="16"
                                            FontWeight="SemiBold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="SM" Binding="{Binding SM}" Width="0.9*" FontSize="16" FontWeight="SemiBold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="NVT" Binding="{Binding NVT}" Width="0.9*" FontSize="16" FontWeight="SemiBold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="İlk Ölçüm"
                                            Binding="{Binding FirstMeasurement, StringFormat=dd.MM.yyyy}"
                                            Width="1.5*"
                                            FontSize="16"
                                            FontWeight="SemiBold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Proje Durumu (ComboBox + Durum Göstergesi) -->
                        <DataGridTemplateColumn Header="Proje Durumu" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <!-- Renkli Durum Dairesi -->
                                        <Ellipse Width="12" Height="12" 
                         Stroke="Gray" StrokeThickness="1"
                         Margin="5,0,8,0"
                         VerticalAlignment="Center">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <!-- Varsayılan: Gri -->
                                                    <Setter Property="Fill" Value="Gray"/>

                                                    <!-- 0 = Sarı (Yapılmadı) -->
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding FieldStatus}" Value="0">
                                                            <Setter Property="Fill" Value="Gold"/>
                                                        </DataTrigger>

                                                        <!-- 1 = Kırmızı (Yapılamıyor) -->
                                                        <DataTrigger Binding="{Binding FieldStatus}" Value="1">
                                                            <Setter Property="Fill" Value="Red"/>
                                                        </DataTrigger>

                                                        <!-- 2 = Yeşil (Tamamlandı) -->
                                                        <DataTrigger Binding="{Binding FieldStatus}" Value="2">
                                                            <Setter Property="Fill" Value="LimeGreen"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>

                                        <!-- ComboBox -->
                                        <ComboBox SelectedValue="{Binding FieldStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Tag"
                          Width="130">
                                            <ComboBoxItem Content="Yapılmadı" Tag="0" />
                                            <ComboBoxItem Content="Yapılamıyor" Tag="1" />
                                            <ComboBoxItem Content="Tamamlandı" Tag="2" />
                                        </ComboBox>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <DataGridTemplateColumn Header="Detay" Width="0.6*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="📝" 
                                            Width="36" 
                                            Height="28" 
                                            Cursor="Hand" 
                                            Focusable="False" 
                                            Background="#F3F4F6"
                                            BorderBrush="#D1D5DB"
                                            Click="BtnOpenNote_Click" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Popup x:Name="NotePopup" 
                       Placement="Center" 
                       PlacementTarget="{Binding ElementName=NewJobsGrid}"
                       AllowsTransparency="True"
                       StaysOpen="False">

                    <Border Background="White" 
                            BorderBrush="#2563EB" 
                            BorderThickness="2" 
                            CornerRadius="12" 
                            Padding="20" 
                            Width="350">

                        <StackPanel>
                            <TextBlock Text="Proje Notu" 
                                       FontWeight="Bold" 
                                       FontSize="16" 
                                       Margin="0,0,0,12" 
                                       Foreground="#1F2937"/>

                            <TextBox x:Name="TxtProjectNote" 
                                     Height="120" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True" 
                                     Padding="5" 
                                     Margin="0,0,0,15"/>

                            <UniformGrid Columns="2">
                                <Button Content="İptal" 
                                        Click="BtnCloseNote_Click"
                                        Margin="0,0,5,0" 
                                        Height="35"
                                        Background="#E5E7EB" 
                                        BorderThickness="0"/>

                                <Button Content="Kaydet"
                                 Background="#2563EB"
                                 Foreground="White"
                                 Height="35"
                                 BorderThickness="0"
                                 Click="BtnSaveNote_Click"
                                  />
                            </UniformGrid>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
        </Border>
    </Grid>
</Window>